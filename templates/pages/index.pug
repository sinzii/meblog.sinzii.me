extends ../_layouts/main

block prepend head
    - var title = siteDescription

block append head
    meta(property='og:description' content=siteDescription)
    meta(property='og:url' content=rootUrl('/'))
    meta(property='description' content=siteDescription)

block content
    +header
    +personal-board
    h3 Have a quick taste
    pre
        code
            | npm install --save meblog
            |
            | npx meblog init
            |
            | npx meblog sample --number-of-posts=20
            |
            | npx meblog serve

    h3 Getting Started
    ul.listing
        each link in gettingStartedLinks
            li.listing__item
                a(href=link.url target='_blank')=link.text

    h3 Sample Content
    ul.listing
        - var latestPosts = posts.slice(0, 10)
        each post in latestPosts
            li.listing__item
                a(href=post.url)=post.title

    h3 Websites built with&nbsp;
        span.p-color meblog
    ul.listing
        each website in websitesBuiltWithMeblog
            li.listing__item
                a(href=website.url target='_blank')=website.url
                span=` - ${website.text}`



