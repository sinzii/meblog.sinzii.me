extends ../_layouts/main

block prepend head
    - var title = siteDescription

block append head
    meta(property='og:description' content=siteDescription)
    meta(property='og:url' content=rootUrl('/'))
    meta(property='description' content=siteDescription)

block content
    +header
    +personal-board
    h3 Have a quick taste
    pre
        code
            | npm install -g meblog // use --unsafe-perm if facing node-gyp error
            |
            | meblog init your-site && cd your-site
            |
            | meblog sample --number-of-posts=20
            |
            | meblog serve

    h3 Latest writings
    ul.listing
        - var latestPosts = posts.slice(0, numberOfLatestPosts)
        each post in latestPosts
            li.listing__item
                a(href=post.url)=post.title

    h3 Websites built with&nbsp;
        span.p-color meblog
    ul.listing
        each website in websitesBuiltWithMeblog
            li.listing__item
                a(href=website.url target='_blank')=website.url
                span=` - ${website.text}`



